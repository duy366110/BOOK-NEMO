<%- include("../../components/head-component.ejs") %>
<link rel="stylesheet" href="/css/components/page-home.css" />
</head>
<body>
    <main>
        <%- include("../../components/header-component.ejs") %>
        <div class="component-wrapper">
            <div class="container">
                <div class="row">
                    <% if(products.length) { %>
                        <% products.forEach((product) => { %>
                            <div class="col-3 d-flex">
                                <div class="card">
                                    <img class="image-fluid card-thumbnail" src="<%= product.image %>" alt="product thumbnail" />
                                    <div class="card-infor">
                                        <h2 class="card-infor_title"><%= product.title %></h2>
                                        <p class="card-infor_price">Giá: <%= product.price %> đ</p>
                                    </div>
                                </div>
                            </div>
                        <% } ) %>

                    <% } else { %> 
                        <p class="blank">Product blank</p>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

<%- include("../../components/footer-component.ejs") %>