<%- include("../../components/head-component.ejs") %>
<link rel="stylesheet" href="/css/components/page-home.css" />
</head>

<body>
    <main>
        <%- include("../../components/header-component.ejs") %>

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/banner_00.jpg" class="d-block w-100" alt="...">
                </div>

                <div class="carousel-item">
                    <img src="/images/banner_01.jpg" class="d-block w-100" alt="...">
                </div>

                <div class="carousel-item">
                    <img src="/images/banner_02.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </button>
        </div>

        <%- include("../../components/sections/section-service") %>

        <div class="component-wrapper">
            <div class="container-fluid">
                    <% if(products && products.length) { %>
                        <div class="product-container">
                        <% products.forEach((product) => { %>
                            <div class="card">
                                <a href="/product/detail/<%= product._id %>" class="card-wrapper">
                                    <div class="thumbnail-wrapper">
                                        <img class="image-fluid card-thumbnail" src="<%= product.image %>" alt="product thumbnail" />
                                    </div>
                                    <div class="card-infor">
                                        <h2 class="card-infor_title"><%= product.title %></h2>
                                        <p class="card-infor_price"><%= product.price %> <span>đ</span></p>
                                    </div>
                                </a>
                            </div>
                        <% } ) %>
                        </div>

                    <% } else { %> 
                        <p class="blank col-12">Sản phẩm chưa cập nhật</p>
                    <% } %>
            </div>
        </div>

        <%- include("../../components/sections/section-new-letter") %>
    </main>

<%- include("../../components/footer-component.ejs") %>