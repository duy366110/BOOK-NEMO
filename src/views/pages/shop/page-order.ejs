<%- include("../../components/head-component") %>
<link rel="stylesheet" href="/css/components/page-order.css" />
<link rel="stylesheet" href="/css/common/common-custom-table.css" />
</head>

<body>
    <main>
        <%- include("../../components/header-component") %>
        <%- include("../../components/breadcrumb-component") %>

        <div class="component-wrapper">
            <div class="container">
                <% if(bill && bill.order.length ) { %>
                    <div class="table-container">
                        <table>
                            <thead>
                                <tr>
                                    <th scope="col">STT</th>
                                    <th scope="col">Tên sản phẩm</th>
                                    <th scope="col">Ảnh sản phẩm</th>
                                    <th scope="col">Giá sản phẩm</th>
                                    <th scope="col">Số lượng</th>
                                </tr>
                            </thead>
                            <tbody>
    
                                <% bill.order.forEach((item, index) => { %>
                                    <tr>
                                        <td><%= index %></td>
                                        <td><%= item.product.title %></td>
                                        <td>
                                            <img class="table-product-thumbnail" src="<%= item.product.image %>" alt="Thumbnail" />
                                        </td>
                                        <td><%= item.product.price %> đ</td>
                                        <td><%= item.quantity %></td>
                                    </tr>
                                <% }) %>
    
                                <tr>
                                    <td>Tên khách hàng</td>
                                    <td colspan="3"><%= bill.user_id.name %></td>
                                    <td rowspan="3">
                                        <div class="d-flex flex-column">
                                            <!-- HUỶ ĐƠN HÀNG -->
                                            <form action="/order/cancel" method="post">
                                                <input type="hidden" name="order" value="<%= bill._id %>" />
                                                <input type="hidden" name="_csrf" value="<%= csurfToken %>" />
                                                <button type="submit" class="btn btn-danger w-100">Huỷ đơn hàng</button>
                                            </form>

                                            <!-- XUẤT ĐƠN HÀNG -->
                                            <a href="/order/invoice/<%=  bill.user_id._id %>" class="btn w-100">Xuất đơn hàng</a>

                                            <!-- FLOW ĐI PAYMENT -->
                                            <a href="/order/payment" class="btn w-100">Thanh toán</a>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Địa chỉ E-mail</td>
                                    <td colspan="4"><%= bill.email %></td>
                                </tr>
                                <tr>
                                    <td>Tổng hoá đơn</td>
                                    <td colspan="4"><%= total %> đ</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="blank col-12">Hoá đơn trống</p>
                <% } %>
            </div>
        </div>
    </main>

<%- include("../../components/footer-component") %>