<%- include("../../components/head-component.ejs") %>
<link rel="stylesheet" href="/css/components/page-admin.css" />
</head>

<body>
    <main>
        <%- include("../../components/header-component.ejs") %>

        <div class="component-wrapper">
            <div class="container">
                <div class="admin-tab-maneger">
                    <a class="btn" href="/admin">Sản phẩm</a>
                    <a class="btn" href="/admin/user">Người dùng</a>
                    <a class="btn" href="/admin/role">Phân quyền</a>
                </div>

                <div class="admin-tab">
                    <a class="btn" href="/user/new">Thêm phân người dùng</a>
                </div>

                <div class="table-container">
                    <% if(users.length) { %>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Tên tài khoản</th>
                                <th scope="col">E-mail tài khoản</th>
                                <th scope="col">Quyềnl tài khoản</th>
                                <th scope="col">Đặt lại mật khẩu</th>
                                <th scope="col">Hành động</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% users.forEach((user, index) => { %>
                            <tr>
                                <td scope="row"><%= index %></td>
                                <td><%= user.name %></td>
                                <td><%= user.email %></td>
                                <td>
                                    <% if(user?.role) { %>
                                        <%= user.role.name %>
                                    <% } else { %>
                                        <p>Không xác định</p>
                                    <% } %>
                                </td>
                                <td><button class="btn mb-0">Đặt lại mật khẩu</button></td>
                                <td>
                                    <a href="/user/edit?user=<%= user._id %>" class="btn mb-0">Sửa thông tin</a>
                                    <button class="btn mb-0">Xoá</button>
                                </td>
                            </tr>
                            <% }) %>

                        </tbody>
                    </table>

                    <% } else {%>
                        <h2 class="balnk-value">Không có nội dung phù hợp</h2>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

<%- include("../../components/footer-component.ejs") %>