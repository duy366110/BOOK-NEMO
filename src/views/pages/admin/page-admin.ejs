<%- include("../../components/head-component.ejs") %>
<link rel="stylesheet" href="/css/components/page-admin.css" />
</head>

<body>
    <main>
        <%- include("../../components/header-component.ejs") %>

        <div class="component-wrapper">
            <div class="container">
                <div class="admin-tab-maneger">
                    <a class="btn" href="/product/admin">Sản phẩm</a>
                    <a class="btn" href="/user/admin">Người dùng</a>
                    <a class="btn" href="/role/admin">Phân quyền</a>
                </div>

                <div class="admin-tab">
                    <a class="btn" href="/product/new">Thêm mới sản phẩm</a>
                </div>

                <% if(products && products.length) { %>
                    <div class="product-container">
                    <% products.forEach((product) => { %>
                        <div class="card">
                            <a href="#" class="card-wrapper">
                                <div class="thumbnail-wrapper">
                                    <img class="image-fluid card-thumbnail" src="<%= product.image %>" alt="product thumbnail" />
                                </div>
                                <div class="card-infor">
                                    <h2 class="card-infor_title"><%= product.title %></h2>
                                    <p class="card-infor_price"><%= product.price %>.000 <span>đ</span></p>
                                </div>
                            </a>
                        </div>
                    <% } ) %>
                    </div>

                <% } else { %> 
                    <p class="blank">Product blank</p>
                <% } %>
            </div>
        </div>
    </main>

<%- include("../../components/footer-component.ejs") %>